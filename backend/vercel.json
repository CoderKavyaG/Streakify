{
    "version": 2,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/hourly",
            "schedule": "*/10 * * * *"
        },
        {
            "path": "/api/cron/urgent",
            "schedule": "30 17 * * *"
        },
        {
            "path": "/api/cron/sync",
            "schedule": "35 18 * * *"
        },
        {
            "path": "/api/cron/cleanup",
            "schedule": "30 21 * * *"
        }
    ]
}